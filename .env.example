# The Stylist Application Environment Configuration

# Application Settings
PORT=8000
STYLIST_DEBUG=true
STYLIST_API_KEY=development_key

# Retailer Configuration
# Set to true to use mock retailer data instead of real API connections
USE_MOCK_RETAILER=true

# Shopify Integration Settings
# These are only needed when USE_MOCK_RETAILER=false and you want to connect to a real Shopify store
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_STORE_URL=

# WooCommerce Integration Settings
# These are only needed when USE_MOCK_RETAILER=false and you want to connect to a real WooCommerce store
WOOCOMMERCE_CONSUMER_KEY=
WOOCOMMERCE_CONSUMER_SECRET=
WOOCOMMERCE_STORE_URL=

# Cache Configuration
# Redis cache is used by default, with fallback to in-memory cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600  # Cache time-to-live in seconds

# Auth Configuration
JWT_SECRET=replace_with_secure_random_string

# Google Authentication (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook Authentication (optional)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Recommendation Engine Settings
RECOMMENDATION_CACHE_TTL=1800  # 30 minutes
MAX_RECOMMENDATIONS=20

# Background Removal
# Choose one of these options:
# 1. Remove.bg API (requires API key)
REMOVE_BG_API_KEY=

# 2. Local TensorFlow.js (requires model files in public/models/segmentation-model/)
# No environment variable needed, but ensure model files are present

# Anthropic API for Style Assistance (optional)
ANTHROPIC_API_KEY=